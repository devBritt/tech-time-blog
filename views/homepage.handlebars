<section class="row-cols-1 row-cols-lg-2">
    {{#each posts as |post|}}
    <div class="col">
        <article class="card">
            <div class="card-body">
                <a href="/post/{{post.id}}" class="post-link"><h3 class="card-title">{{post.title}}</h3></a>
                <p class="card-subtitle">{{post.created_at}} by {{post.user.username}}</p>
                <p class="post-text">{{post.post_text}}</p>
                <a href="/post/{{post.id}}" class="card-link">
                {{post.comments.length}}
                comment(s)
                </a>
            </div>
        </article>
    </div>
    {{/each}}
</section>